<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.RowConstraints?>

<Pane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../styles/dungeon.css">
   <GridPane fx:id="squares" onKeyPressed="#handleKeyPress">
      <columnConstraints>
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
      <children>

      </children>
   </GridPane>

   <StackPane fx:id="gameOver" visible="false">
      <Label fx:id="text" />
      <HBox>
         <Button onAction="#handleReturn" text="Return" />
         <Button fx:id="resume" onAction="#handleResume" />
      </HBox>
   </StackPane>
   <Button fx:id="setting" onAction="#handleSetting" text="Setting" />
   <FlowPane fx:id="backpack">
   </FlowPane>
</Pane>